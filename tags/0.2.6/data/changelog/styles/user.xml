<!DOCTYPE styles [
		<!ELEMENT styles (element)+>

		<!ELEMENT element EMPTY>
		<!ATTLIST element name CDATA #REQUIRED
		                  style CDATA #REQUIRED
		                  foreground CDATA #IMPLIED
		                  background CDATA #IMPLIED>
]>
<styles>
  <element name="text" style="plain" foreground="000000"/>
  <element name="item1" style="bold" foreground="0080ff"/>
  <element name="item2" style="plain" foreground="000080"/>
  <element name="item3" style="plain" foreground="004040"/>
  <element name="headline1" style="bold" foreground="0000c0"/>
  <element name="headline2" style="bold" foreground="008000"/>
  <element name="shortcut" style="bold" foreground="000080"/>
  <element name="menu" style="bold" foreground="000080"/>
  <element name="string" style="bold" foreground="000080"/>
  <element name="unimportant" style="plain" foreground="808080"/>
  <element name="comment" style="italic" foreground="808080"/>
</styles>
